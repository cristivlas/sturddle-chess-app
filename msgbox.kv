#:kivy 2.0.0


<ModalBox>:
    _container: container
    title_size: sp(16)
    GridLayout:
        padding: dp(10)
        cols: 1
        size_hint: None, None
        pos: root.pos
        size: root.size

        BoxLayout:
            size_hint: 1, None
            height: dp(32)
            Label:
                text: root.title
                color: root.title_color
                size_hint_y: None
                height: self.texture_size[1] + dp(8)
                text_size: self.width - dp(8), None
                font_size: root.title_size
                font_name: root.title_font
                bold: True
                halign: 'left'

            AwesomeActionButton:
                text: root.close_text
                on_release: root.dismiss()
                halign: 'right'
                size_hint_x: None
                width: self.texture_size[0] + dp(14)

        Widget:
            size_hint_y: None
            height: dp(4)
            canvas:
                Color:
                    rgba: root.separator_color
                Rectangle:
                    pos: self.x, self.y + root.separator_height / 2.
                    size: self.width, root.separator_height

        BoxLayout:
            id: container


<MessageBoxLayout>:
    _box: box
    _buttons: buttons
    _message: message
    cols: 1
    rows: 2

    BoxLayout:
        id: box
        FontScalingLabel:
            id: message
            markup: True
            text_size: self.width if self.auto_wrap else None, None
            max_font_size: sp(18)
            halign: 'center'
            background: 0,0,0,0

    BoxLayout:
        id: buttons
        size_hint: 1, .35

